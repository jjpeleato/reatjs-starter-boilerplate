# This file is for unifying the coding style for different editors and IDEs
# https://editorconfig.org/

root = true

[*]
charset = utf-8
indent_style = tab
indent_size = 4
end_of_line = lf
insert_final_newline = true
max_line_length = 80
trim_trailing_whitespace = true

[*.js]
indent_style = space
indent_size = 2

[*.scss]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 2

[*.md]
max_line_length = 0
trim_trailing_whitespace = false

[COMMIT_EDITMSG]
max_line_length = 0
